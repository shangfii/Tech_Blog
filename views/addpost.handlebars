{{!-- page for adding new post --}}
<article class="row">
    <form class="col s12 addPost-form">
        <h4 class="center-align">Create A New Post</h4>
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">title</i>
                <input id="title" type="text" name="title">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <textarea id="postContent" class="materialize-textarea"></textarea>
                <label for="postContent">Content</label>
            </div>
        </div>
        <div class="row">
            <button class="waves-effect waves-light btn col s12" type="submit" name="action">Submit New Post</button>
        </div>
    </form>
    <div class="row">
    <a href="/dashboard/add" class="waves-effect waves-light btn col"><i class="material-icons right">add</i>Add Post</a>
</div>
</article>
{{!-- js required to add new post --}}
<script src="/js/dashboardAdd.js"></script>